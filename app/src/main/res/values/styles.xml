<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="VariantText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="VariantText.Bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VariantButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/little_padding</item>
        <item name="android:paddingBottom">@dimen/little_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="VariantButton.Dark">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="VariantButton.Tint">
        <item name="android:background">@drawable/background_tint_rounded</item>
        <item name="android:paddingLeft">@dimen/large_padding</item>
        <item name="android:paddingRight">@dimen/large_padding</item>

    </style>

    <style name="VariantButton.White">
        <item name="android:background">@drawable/background_white_rounded</item>
        <item name="android:textColor">@color/cherry</item>
        <item name="android:paddingLeft">@dimen/middle_padding</item>
        <item name="android:paddingRight">@dimen/middle_padding</item>

    </style>

</resources>
